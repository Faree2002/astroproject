---
import style from './style.css'
---
<h1>Timer</h1>

<style>
  body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    padding: center;
    font-family: Arial, Helvetica, sans-serif;
}
.Nombre {
    font-size: 40px;
    color: #c21212;
    align-items: start;
    justify-content: end;
}
.sfbg {
    background: #141414;
    height: 69px;
    left: 0;
    position: fixed;
    top: 0;
    width: 100%;
}
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin:auto; /* Ajusta este valor según sea necesario */
}

.heading {
    margin-top: 0;
}
.Top {
    font-size: 40px;
    color: #fff;
    align-items: start;
    justify-content: start;
}

.timer {
    font-size: 40px;
    font-weight: bold;
    margin: 20px 0;
}

.play,
.pause {
    width: 100px;
    height: 30px;
    border: none;
    border-radius: 5px;
    background-color: #000;
    color: #fff;
    font-size: 16px;
    cursor: pointer;
    padding: 10px;
    margin: 5px; /* Elimina el margen entre los botones */
    text-decoration: none;
    display: inline-flex; /* Cambiado de 'flex' a 'inline-flex' */
    justify-content: center;
    align-items: center;
    transition: all 0.3s;
}


.restart{
    width: 100px;
    height: 30px;
    border: none;
    border-radius: 5px;
    background-color: #000;
    color: #fff;
    font-size: 16px;
    cursor: pointer;
    padding: 10px;
    margin: 5px;
    text-decoration: none;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s;
}
</style>

<div class="container">
  <h2 class="timer">05:00</h2>
  <button class="play">Play</button>
  <button class="pause">Pause</button>
  <button class="restart">Restart</button>
</div>

<script type="module">
  let interval; // Variable para almacenar el intervalo del temporizador
  let count = 60 * 5; // 5 minutos en segundos
  const timer = document.querySelector('.timer');
  const playButton = document.querySelector('.play');
  const pauseButton = document.querySelector('.pause');
  const restartButton = document.querySelector('.restart')

  function playTimer() {
    interval = setInterval(() => {
      count--;
      const minutes = Math.floor(count / 60).toString().padStart(2, '0'); // Calcula los minutos
      const seconds = (count % 60).toString().padStart(2, '0'); // Calcula los segundos restantes
      const text = `${minutes}:${seconds}`; // Formatea el tiempo como MM:SS
      if (timer) {
        timer.innerHTML = text; // Actualiza la visualización del temporizador
      }
      if (count <= 0) {
        clearInterval(interval); // Detiene el temporizador cuando llega a 0
      }
    }, 1000); // Actualiza cada segundo
  }
  function pauseTimer() {
    clearInterval(interval); // Pausa el temporizador
  }
  function restartTimer() {
    count = 60 * 5; // Reinicia el contador a 5 minutos en segundos
    timer.innerHTML = "05:00"; // Actualiza la visualización del temporizador
  }
  playButton.addEventListener('click', playTimer);
  pauseButton.addEventListener('click', pauseTimer);
  restartButton.addEventListener('click', restartTimer);

</script>
